{
    "name": "daniel-km/noid",
    "description": "Create and manage temporary or permanent nice opaque identifiers for physical or digital objects like `12025/654xz321` (port of a perl utility).",
    "type": "library",
    "license": "CECILL-B",
    "authors": [
        {
            "name": "Daniel Berthereau",
            "email": "Daniel.packagist@Berthereau.net"
        },
        {
            "name": "John A. Kunze",
            "email": "jak@ucop.edu"
        }
    ],
    "keywords": [
        "Noid4Php",
        "identifier",
        "utility",
        "nice opaque identifier",
        "persistent identifier",
        "noid",
        "tool"
    ],
    "homepage": "https://gitlab.com/Daniel-KM/Noid4Php",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Noid\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "require": {
        "php": ">=7.1"
    },
    "suggest": {
        "ext-bcmath": "Optional for drand48 generator float operations (not used for minting)",
        "ext-dba": "Required for LMDB (default) or BerkeleyDB storage backend",
        "ext-pdo": "Required for PDO storage backend (MySQL, PostgreSQL, SQLite)",
        "ext-pdo_mysql": "Required for PDO MySQL/MariaDB support",
        "ext-pdo_pgsql": "Required for PDO PostgreSQL support",
        "ext-pdo_sqlite": "Required for PDO SQLite support",
        "ext-mysqli": "Deprecated: use ext-pdo_mysql instead",
        "ext-sqlite3": "Required for SQLite3 storage backend (alternative to PDO)",
        "ext-simplexml": "Required for XML storage backend"
    },
    "require-dev": {
        "ext-dba": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-posix": "*",
        "ext-simplexml": "*",
        "ext-sqlite3": "*",
        "phpunit/phpunit": "^9"
    }
}
